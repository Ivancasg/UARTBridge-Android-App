<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#FFFFFF"
    android:gravity="top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_tittle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8BC34A"
        android:gravity="center"
        android:text="UART Bridge"
        android:textColor="#2B2B2B"
        android:textSize="34sp"
        android:textStyle="bold" />





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/ButtonSetup"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Setup" />

        <Button
            android:id="@+id/OpenConsole"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Open Console" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_serialport"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:ems="6"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Serial Port"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_serial"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:ems="6"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="/dev/ttyHSL0" />

        <TextView
            android:id="@+id/textView_baudrate"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:ems="6"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Baudrate"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_baudrate"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:ems="6"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="115200" />
    </LinearLayout>

</LinearLayout>